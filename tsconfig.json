{
	"compilerOptions": {
		"lib": ["ES2015"],
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "ES2015",
		"allowJs": true,
		"resolveJsonModule": true,
		"moduleDetection": "force",
		"isolatedModules": true,
		"verbatimModuleSyntax": true,

		"strict": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitOverride": true,

		"module": "NodeNext",
		"outDir": "dist",
		"rootDir": "src",

		"declaration": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["src/**/*.test.ts"]
}
